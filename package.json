{
  "name": "mas-helper",
  "displayName": "mas-helper",
  "description": "Automatically resolves MASTG references and provide autocomplete for MAS IDs",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown",
    "onCommand:extension.updateGhostTextData",
    "workspaceContains:**/*.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.updateReferences",
        "title": "MAS: Update references"
      }
    ],
    "languages": [
      {
        "id": "plaintext"
      },
      {
        "id": "markdown"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thedauntless/mas-helper"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.8.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
